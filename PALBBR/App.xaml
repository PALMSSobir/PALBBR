<Application x:Class="PALBBR.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:PALBBR" 
             StartupUri="MainWindow.xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PALBBR;component/Themes/Styles.xaml"/>
                <ResourceDictionary Source="/PALBBR;component/Themes/ViewDictionary.xaml"/>

                <ResourceDictionary>
                    <vm:MainViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:vm="clr-namespace:PALBBR.ViewModel" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>